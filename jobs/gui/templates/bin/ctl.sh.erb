#!/bin/bash

RUN_DIR=/var/vcap/sys/run/gui
LOG_DIR=/var/vcap/sys/log/gui
PIDFILE=${RUN_DIR}/pid


# Set environment variables
export GUI_HOST=<%= p('host') %>
export GUI_PORT=<%= p('port') %>
export LEXER_PORT="<%= link('lexer_port').p('port') %>"
export CALCULATOR_PORT="<%= link('calculator_port').p('port') %>"
export DATABASE_PORT="<%= link('database_port').p('port') %>"
export NODE_ROUTE=<%= "#{spec.deployment}-#{spec.deployment}-0.node.#{p('consul.dc')}.#{p('consul.domain')}" %>


case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    cd /var/vcap/packages/gui

    export PATH=/var/vcap/packages/ruby-2.6.5-r0.29.0/bin:$PATH

    exec /var/vcap/packages/ruby-2.6.5-r0.29.0/bin/bundle exec \
      rackup --host ${GUI_HOST} \
             --port ${GUI_PORT} \
             --env production \
      >>  $LOG_DIR/gui.stdout.log \
      2>> $LOG_DIR/gui.stderr.log

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
